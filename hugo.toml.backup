baseURL = "https://DavidDevGear.github.io/"
title = "Game Dev Gear Reviews"
languageCode = "en-us"
theme = "PaperMod"

[params]
defaultTheme = "light"
description = "Gaming hardware reviews from a game developer's perspective"
logo = "/images/logo.png"
logoTitle = "Game Dev Gear Reviews"
themeColor = "#3498db"
displayFullLangName = false
ShowShareButtons = true
ShowReadingTime = true
ShowPostNavLinks = true
ShowBreadCrumbs = true
ShowCodeCopyButtons = true

[params.assets]
disableHLJS = false
disableFingerprinting = false
customCSS = ["css/custom.css"]

[params.homeInfoParams]
