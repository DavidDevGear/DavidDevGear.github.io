subtitle = "Game Developer & Reviewer"
imageUrl = "/images/profile.png"
imageWidth = 150
imageHeight = 150
imageTitle = "David - Game Developer"

[[params.socialIcons]]
name = "github"
url = "https://github.com/DavidDevGear"

[[params.socialIcons]]
